<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ex.ex.mappers.UnknownMapper">
 <insert id="insert">
	insert into article(articleNo,userNo,aContent,boardNo,aTitle,aDate,aViewCount)
	values(ARTICLE_SEQ.nextVal,#{userNo},#{aContent},#{boardNo},#{aTitle},sysdate,0)
 </insert>
 
	<select id="listAll" resultType="unknown">
		select * from article where boardNo=1 order by articleNo desc
	</select>
	
	<update id="modify">
		update article set aContent=#{aContent},aTitle=#{aTitle} where articleNo=#{articleNo}
	</update>
	
	<delete id="delete">
		delete from article where articleNo=#{articleNo}
	</delete>
	
	<select id="detail" resultType="unknown">
		select * from article where articleNo=#{articleNo}
	</select>
	
	<update id="upCount">
		update article set aViewCount=aViewCount+1 where articleNo=#{articleNo}
	</update>
</mapper>


