<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
 	
 	<definition name="empty" template="/WEB-INF/tiles/layout/empty.jsp">
    </definition>
    
    <definition name="empty/*.emp" extends="empty">
        <put-attribute name="content" value="/WEB-INF/views/empty/{1}.jsp" />
    </definition>
 	
    <definition name="layout" extends="empty" template="/WEB-INF/tiles/layout/layout.jsp">
        <put-attribute name="footer" value="/WEB-INF/tiles/tile/footer.jsp" />
        <put-attribute name="header" value="/WEB-INF/tiles/tile/header.jsp" />
    </definition>
 
    <definition name="*/*.lay" extends="layout">
        <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
    
    <definition name="*/*/*.lay" extends="layout">
        <put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
    </definition>
    
    
    
   
</tiles-definitions>


